{% extends 'base.html.twig' %}

{% block title %}Lunette index{% endblock %}

{% block content %}
<div class="container mt-4">
    <div class="row">
        <div class="col-lg-12">
            <h2 class="text-center text-primary">Liste des Lunettes</h2>
        </div>
    </div>
    <hr/>
    <div class="row">
        <div class="col-lg-12">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white">
                    <h4>Gestion des Lunettes</h4>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-striped table-bordered table-hover table-responsive" id="dataTables-example">
                            <thead class="thead-dark">
                                <tr>
                                    <th>Quantité</th>
                                    <th>Prix</th>
                                    <th>Photo</th>
                                    <th>Modèle</th>
                                    <th>Description</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                {% for lunette in lunettes %}
                                <tr>
                                    <td>{{ lunette.Quantite }}</td>
                                    <td>{{ lunette.Prix }}</td>
                                    <td><img src="{{ asset('uploads/images/' ~ lunette.photo) }}" alt="Photo de la lunette" class="img-thumbnail" width="50"></td>
                                    <td>{{ lunette.Modele }}</td>
                                    <td>{{ lunette.description }}</td>
                                    <td>
                                        <a href="{{ path('app_lunette_show', {'id': lunette.id}) }}" class="btn btn-primary btn-sm">
                                            <i class="fas fa-edit"></i> Modifier
                                        </a>
                                        <a href="{{ path('app_lunette_edit', {'id': lunette.id}) }}" class="btn btn-danger btn-sm">
                                            <i class="fas fa-trash-alt"></i> Supprimer
                                        </a>
                                    </td>
                                </tr>
                                {% else %}
                                <tr>
                                    <td colspan="6" class="text-center text-muted">Aucune lunette trouvée</td>
                                </tr>
                                {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


{% endblock %}
