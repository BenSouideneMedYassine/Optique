{% block title %}Commande{% endblock %}

{% block content %}
<div class="container mt-4">
    <div class="row">
        <div class="col-lg-12">
            <h1 class="text-center text-primary">Détails de la Commande</h1>
        </div>
    </div>
    <hr/>
    <div class="row">
        <div class="col-lg-12">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white">
                    <h4>Informations de la Commande</h4>
                </div>
                <div class="card-body">
                    <table class="table table-striped table-bordered">
                        <tbody>
                            {# <tr>
                                <th scope="row">Id</th>
                                <td>{{ commande.id }}</td>
                            </tr> #}
                            <tr>
                                <th scope="row">Quantité</th>
                                <td>{{ commande.quantite }}</td>
                            </tr>
                            <tr>
                                <th scope="row">Prix</th>
                                <td>{{ commande.Prix }}</td>
                            </tr>
                            <tr>
                                <th scope="row">Date</th>
                                <td>{{ commande.date ? commande.date|date('Y-m-d H:i:s') : '' }}</td>
                            </tr>
                        </tbody>
                    </table>
                    <div class="text-center">
                        <a href="{{ path('app_commande_index') }}" class="btn btn-secondary btn-sm">
                            <i class="fas fa-arrow-left"></i> Retour à la liste
                        </a>
                    </div>
                    {{ include('commande/_delete_form.html.twig') }}
                </div>
            </div>
        </div>
    </div>
</div>

